{
  "name": "orchestratai-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "orchestratai_client",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:backend & bun run dev:frontend",
    "dev:frontend": "cd orchestratai_client && bun run dev",
    "dev:backend": "cd orchestratai_api && ./dev.sh",
    "build": "bun run build:frontend && bun run build:backend",
    "build:frontend": "cd orchestratai_client && bun run build",
    "build:backend": "echo 'Backend build will use Docker'",
    "validate:enums": "bun run scripts/validate-enums.ts",
    "test": "bun run validate:enums && bun run test:frontend && bun run test:backend",
    "test:frontend": "cd orchestratai_client && bun run test",
    "test:backend": "PYTHONPATH=./orchestratai_api uv run --project orchestratai_api pytest",
    "test:coverage": "bun run test:coverage:frontend && bun run test:coverage:backend",
    "test:coverage:frontend": "cd orchestratai_client && bun run test:coverage",
    "test:coverage:backend": "PYTHONPATH=./orchestratai_api uv run --project orchestratai_api pytest --cov=src --cov-report=term --cov-report=html --cov-fail-under=80",
    "lint": "bun run validate:enums && bun run lint:frontend && bun run lint:backend",
    "lint:frontend": "cd orchestratai_client && bun run lint",
    "lint:backend": "uv run --project orchestratai_api ruff check orchestratai_api/src/",
    "format": "bun run format:frontend && bun run format:backend",
    "format:frontend": "cd orchestratai_client && bun run format",
    "format:backend": "uv run --project orchestratai_api ruff format orchestratai_api/src/",
    "typecheck": "bun run typecheck:frontend && bun run typecheck:backend",
    "typecheck:frontend": "cd orchestratai_client && bun run typecheck",
    "typecheck:backend": "uv run --project orchestratai_api mypy orchestratai_api/src/",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/user-event": "^14.6.1",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "lint-staged": "^16.2.3"
  },
  "engines": {
    "bun": ">=1.0.0",
    "python": ">=3.12"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild",
    "msw",
    "sharp",
    "unrs-resolver"
  ],
  "lint-staged": {
    "orchestratai_client/**/*.{ts,tsx,mjs}": [
      "sh -c 'cd orchestratai_client && bun run format'",
      "sh -c 'cd orchestratai_client && bun run lint:fix'"
    ],
    "orchestratai_api/src/**/*.py": [
      "uv run --project orchestratai_api ruff format",
      "uv run --project orchestratai_api ruff check --fix"
    ]
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
